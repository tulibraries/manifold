<%= render "mobile-menu-secondary" %>

<div class="container-lg policy-show">
  
  <div class="row">
    <div class="col-lg-3 d-none d-lg-block">
      <%= render "categories_list" %>
    </div>

    <% unless @policy.effective_date.nil? %>
      <div class="col-12 col-lg-6">
    <% else %>
      <div class="col-12 col-lg-9">
    <% end %>

    <%= render "secondary_covid_alert" if @header_alert.present? %>

    <h1 class="page-title"><%= title @policy.name %></h1>
      <%= @policy.description %>
    </div>

    <% unless @policy.effective_date.nil? %>
      <div class="col-12 col-lg-3">
        <div class="effective_date entity-help">
        <h2><%= t("manifold.policies.show.effective_date") %></h2>
          <%= @policy.effective_date.strftime("%^B %d, %Y ") %>
        </div>
      </div>
    <% end %>

  </div>

</div>

<script type="application/ld+json">
  <%= json_ld(@policy) %>
</script> 
