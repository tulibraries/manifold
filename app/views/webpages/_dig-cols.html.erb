<div id="digcolsCarousel" class="home-digcol-row carousel pt-3">
  <div class="carousel-inner mx-3 pt-2" role="listbox">
    <% @digcols.each_with_index do |digcol, i| %>
    <div class="carousel-item<%= " active" if i == 0 %>">
      <div class="card library-event">
        <%= link_to digcol.link do %>

        <% if digcol.image.attached? %>
        <div class="item pb-4">
          <div class="img-wrapper">
          <%= image_tag digcol.image, loading: "lazy" if digcol.image.attached? %>
          </div>
        </div>
        <% end %>

        <div class="card-body px-0">
          <div class="item-caption text-start mt-0">
            <h3><%= digcol.label.truncate(52) %></h3>
        <% end %>

            <p class="card-text">
              <p style="color: white;"><%= strip_tags(digcol.blurb.truncate(120).html_safe) %></p>
            </p>
              
          </div>
        </div>
      </div>
    </div>
    <% end %>
          

    </div>
    <a class="carousel-control-prev bg-transparent w-aut" href="#digcolsCarousel" role="button" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next bg-transparent w-aut" href="#digcolsCarousel" role="button" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </a>

  <div class="col-12 text-end px-0">
    <%= link_to "Browse our Digital Collections", t("manifold.webpages.home.digital_collections_link"), class: "view-all" %>
  </div>

</div>

