<div class="container-lg blogs">
<h1 class="fs-2">#<%= params[:tag] %></h1>
  <div class="row ms-2 mt-3 tagged-posts">
  <% @posts.each do |post| %>
    <div class="card blogpost">
      <div class="card-body">
        <div class="card-title"><%= link_to post.title, post.post_guid %></div>
        <div class="att mt-4"><strong>From</strong>: <%= link_to blog_name(post.blog_id), blog_url(post.blog_id) %></div>
      </div>
    </div>
  <% end %>
  </div>
</div>
