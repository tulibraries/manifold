
<div class="row slideshow">
  <div class="col">
    <div id="carouselIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
      <% @images.each_with_index do |image, index| %>
        <div data-bs-target="#carouselIndicators" data-bs-slide-to="<%= index %>"
          <% if index == 0 %> class="active"<% end %>>              
        </div>
      <% end %>
      </div>
      <div class="carousel-inner" aria-label="carousel" role="listbox" id="slide-image">
      <% @images.each_with_index do |image, index| %>  
        <div class="carousel-item text-center<% if index == 0 %> active<% end %>" role="option">
          <% if [0, 1, 2, 3].include?(index) %>
            <%= link_to image_tag("charles/"+image, class: 'img-fluid'), asset_path("charles/"+image), target: "_blank" %>
          <% else %>
            <%= image_tag("charles/"+image, class: 'img-fluid') %>
          <% end %>
        </div>
        <% end %>
        <button class="carousel-control-prev" data-bs-target="#carouselIndicators" type="button" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" data-bs-target="#carouselIndicators" type="button" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
        </div>
      </div>
    </div>
  </div>
