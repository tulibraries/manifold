<footer>
<% if ["services", "policies"].include? controller_name %>
<div class="container-lg" id="print-page">
  <div class="row">
    <div class="col-12 text-center py-3" data-controller="print">
      <%= link_to t("manifold.default.print_page"), "#print", id: "print", data: { action: "click->print#printPage" } %>
    </div>
  </div>
</div>
<% end %>

<% unless action_name == "home" %>
  <div class="diagonal footer-diagonal">
   <div id="diagonal-line"></div>
  </div>
<% end %>

<div id="site-footer">
  <div class="container-lg">
    <div class="row social justify-content-between px-2 px-lg-4 mb-4">
      
      <div class="col-12 col-sm-6 mt-4">
      <%= link_to(t("manifold.footer.donate_link"), "/support-the-libraries", class: "donate") %>
  </div>
  <div class="col-12 col-sm-6 text-sm-end">
      <ul class="mb-0 social-links">
        <%= link_to "/social-media" do %>
        <li class="instagram">
          <%= image_tag('IG_red_round.png', alt: "instagram logo") %>
        </li>
        <li class="facebook">
          <%= image_tag('FB_red_round.png', alt: "facebook logo") %>
        </li>
        <li class="twitter">
          <%= image_tag('Twitter_red_round.png', alt: "twitter logo") %>
        </li>
        <li class="linked-in">
          <%= image_tag('linked-in-red-round.png', alt: "linked-in logo") %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>

    <div class="row tu-links">
      <div class="col-12 col-lg-8 px-0">
        <div class="row">
          <div class="col px-0 pt-2">
            <h2><%= t("manifold.default.footer.quick_links") %></h2>
          </div>
        </div>
        <div class="row mt-3">
          <div class="col-12 col-lg-3 px-0">
            <ul class="list-unstyled">
              <li><%= link_to t("manifold.footer.ezborrow_link"), "/ezborrow"  %></li>
              <li><%= link_to t("manifold.footer.illiad_link"), "/illiad" %></li>
              <li><%= link_to t("manifold.footer.primo_articles"), "/find-by-citation" %></li>
              <li><%= link_to t("manifold.footer.patron_forms_label"), forms_path %></li>
            </ul>
          </div>
          <div class="col-12 col-lg-4 px-0">
            <ul class="list-unstyled">
              <li><%= link_to t("manifold.footer.standards_link"), "/standards" %></li>
              <li><%= link_to t("manifold.footer.diversity_link"), "/diversity" %></li>
              <li><%= link_to t("manifold.footer.accessibility_link"), category_path("accessibility-services") %></li>
              <li><%= link_to t("manifold.footer.employment_opportunities"), "/jobs" %></li>
            </ul>
          </div>
          <div class="col-12 col-lg-5 px-0">
            <ul class="list-unstyled">
              <li><%= link_to t("manifold.footer.privacy_link"), "/privacy" %></li>
              <li><%= link_to t("manifold.footer.tu_homepage_link"), "/tu-home" %></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-4 px-0">
        <div class="row">
          <div class="col-12 col-lg-9 offset-lg-2 px-0 address mt-4">
            <p class="street-address mt-5"><%= t("manifold.footer.charles_address").html_safe %></p>
            <p><%= link_to t("manifold.footer.numbers_link"), "/numbers" %></p>
            <p><%= link_to t("manifold.footer.staff_directory"), people_path %></p>
            <p><%= link_to t("manifold.footer.org_charts"), "/org-charts" %></p>
            <p><%= link_to(t("manifold.footer.staff_forms"), "/staff-forms", target: "_blank") %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col p-0 mt-0 mb-5">
        <%= link_to (image_tag "gear.png",
                      style: "width: 35px", 
                      class: "decorative", 
                      alt: ""), edit_url %>
      </div>
    </div>

</div>
</footer>
