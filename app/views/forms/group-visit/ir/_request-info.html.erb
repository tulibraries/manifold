<fieldset class="form-section">
	<legend><%= t("(manifold.forms.ir.incident_details") %></legend>
	<%= f.input :type_of_incident, as: :radio_buttons, 
				label: t("manifold.forms.ir.type_of_incident"), 
				collection: t("manifold.forms.ir.incident_types").map{ |k,v| v }, 
				wrapper_html: { class: "form_affiliation" }, 
				required: :true %>
	<%= f.input :other_incident, label: false, placeholder: t("manifold.forms.ir.other"), 
				wrapper_html: { class: "specify-other" } %>
	<%= f.input :date_of_incident, label: t("manifold.forms.ir.date_of_incident"), 
				html5: true, as: :datetime, start_year: Date.today.year-1, 
				end_year: Date.today.year, ampm: true, minute_step: 5, 
				order: [:month, :day, :year], 
				required: :true %>
	<%= f.input :location_where_incident_occurred, label: t("manifold.forms.ir.location"), required: :true %>
	<%= f.input :incident_description, label: t("manifold.forms.ir.incident_description"), 
				as: :text, required: :true, input_html: { cols: 60, rows: 5 }, 
				hint: t("manifold.forms.ir.incident_description_hint") %>

	<fieldset class="form-section">
		<legend><%= t("manifold.forms.ir.persons_involved") %></legend>
		<%= f.input :primary_relevant_person, label: t("manifold.forms.ir.primary_relevant_person") %>
		<%= f.input :primary_email, label: t("manifold.forms.ir.relevant_email") %>
		<%= f.input :primary_affiliation, as: :select, 
					label: t("manifold.forms.ir.affiliation"), 
          collection: t("manifold.forms.fields.temple_affiliation_array")
                .merge(t("manifold.forms.fields.non_temple_affiliation_array")).map{ |k,v| v }  %>
		<hr />
		<%= f.input :secondary_relevant_person, label: t("manifold.forms.ir.secondary_relevant_person") %>
		<%= f.input :secondary_email, label:  t("manifold.forms.ir.relevant_email") %>
		<%= f.input :secondary_affiliation, as: :select, 
					label: t("manifold.forms.ir.affiliation"), 
          collection: t("manifold.forms.fields.temple_affiliation_array")
                .merge(t("manifold.forms.fields.non_temple_affiliation_array")).map{ |k,v| v }  %>
	</fieldset>
</fieldset>

<%= f.input :victim_complainant_statement, as: :text, input_html: { cols: 60, rows: 5 }, 
			label: t("manifold.forms.ir.victim_statement") %>
<%= f.input :action_taken, as: :select, name: "action", required: :true, 
			collection: t("manifold.forms.ir.action_taken_options").map{ |k,v| v }, 
			label: t("manifold.forms.ir.action_taken_label"), 
			hint: t("manifold.forms.ir.action_taken_hint"), 
			input_html: { multiple: true, size: 5 } %>
<%= f.input :other_action_taken, as: :text, label: t("manifold.forms.ir.other_action_taken") %>
<%= f.input :police_report_number, label: t("manifold.forms.ir.police_report_number") %>
<%= f.input :supervisor_notified, as: :radio_buttons, required: :true, 
			label: t("manifold.forms.ir.supervisor_notified") %>
