<% content_for :body_class, "minipage scop" %>

<div class="banner-image scop"></div>

<div class="container-lg">

  <div class="row">
    <div class="col-12">
      <h1 class="page-title scop">
        <%= title t("manifold.webpages.scop.page_title") %>
      </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-lg-4 pe-14 left-links">
      <ul class="list-unstyled locations">
        <li>
          <%= link_to t("manifold.webpages.scop.links.scholar_share_label"), 
                      t("manifold.webpages.scop.links.scholar_share_link"), 
                      id: "scop_scholar_share_button" %>
        </li>
        <li>
          <%= link_to t("manifold.webpages.scop.links.nb_press_label"), 
                      t("manifold.webpages.scop.links.nb_press_link"), 
                      id: "scop_nb_press_button" %>
        </li>
        <li>
          <%= link_to t("manifold.webpages.scop.links.open_journals_label"), 
                      t("manifold.webpages.scop.links.open_journals_link"), 
                      id: "scop_open_journals_button" %>
        </li>
        <li>
          <%= link_to t("manifold.webpages.scop.contact"), 
                      people_path(department: "scop"), 
                      id: "scop_contact_button" %>
        </li>
      </ul>
    </div>

    <div class="col-12 col-lg-8 description">
      <%= @webpage.description if @webpage.description.present? %>
    </div>
  </div>

  <div class="row links-container">
    <div class="col-12 col-lg-6 links">
    <% if @pub_services.present? %>
      <h2>
        <%= link_to t("manifold.webpages.scop.publishing_services"), 
                    category_path(@pub_services), 
                    id: "scop_pub_services_header" %>
      </h2>
      <ul class="list-unstyled">
        <% @pub_services_links.each do |link| %>
          <li>
            <%= link_to link.label, 
                        link, 
                        id: "scop_pub_services_link_#{link.label.parameterize}" %>
          </li>
        <% end unless @pub_services_links.nil? %>
      </ul>
    <% end %>

    <% if @blog.present? %>
      <h2>
        <%= link_to t("manifold.webpages.scop.blog"), 
                    @blog.base_url, 
                    id: "scop_blog_header" %>
      </h2>
      <ul class="list-unstyled">
        <% @blog_posts.each do |link| %>
          <li>
            <%= link_to link.title,
                          link.post_guid, 
                          id: "scop_blog_link_#{link.title.parameterize}" %>
          </li>
        <% end unless @blog_posts.nil? %>
        <li class="text-lg-right all-events">
          <%= link_to t("manifold.webpages.scop.links.view_all"), 
                      strip_tags(@blog.base_url), 
                      {style: "text-decoration:underline", id: "scop_blog_view_all"} %> >
        </li>
      </ul>
    <% end %>
    </div>

    <div class="col-12 col-lg-6 links">
    <% if @scholar_share.present? %>
      <h2>
        <%= link_to t("manifold.webpages.scop.scholar_share"), 
                    category_path(@scholar_share), 
                    id: "scop_scholar_share_header" %>
      </h2>
      <ul class="list-unstyled">
        <% @scholar_share_links.each do |link| %>
          <li>
            <%= link_to link.label, 
                        link, 
                        id: "scop_scholar_share_link_#{link.label.parameterize}" %>
          </li>
        <% end unless @scholar_share_links.nil? %>
      </ul>
    </div>
    <% end %>

    <% if @event_links.present? && @event_links.count > 0 %>
      <h2>
        <%= link_to t("manifold.webpages.scop.events"), 
                    events_path(type: "SCOP", anchor: "upcoming-events"), 
                    id: "scop_events_header" %>
        </h2>
      <ul class="list-unstyled">
        <% @event_links.each do |link|  %>
          <li>
            <%= link_to link.label, 
                        event_path(link.id), 
                        id: "scop_events_link_#{link.label.parameterize}" %>
          </li>
        <% end unless @event_links.nil? %>
        <li class="text-lg-right dsc-event">
          <%= link_to t("manifold.webpages.scop.links.view_all"), 
                      events_path(type: "SCOP", anchor: "upcoming-events"), 
                      {style: "text-decoration:underline", id: "scop_events_view_all"} %> >
        </li>
      </ul>
    <% end %>
    </div>

  </div>

</div>
