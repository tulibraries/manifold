<%= render "mobile_menu" %>

<div class="container-lg event-index">
  <div class="container-lg">
    <div class="row">
      <div class="col-12">
        <h1 class="d-none d-lg-block">
          <%= link_to t("manifold.events.index.page_title"), events_path, class: "blue" %>
        </h1>
      </div>
    </div>
  </div>


  <div class="container-lg pb-2" id="featured-events">
    <div class="row">
      <div class="col-12 text-center filter_links pt-4">
        <%= current_link(action_name) %>
        <hr />
        <%= link_to t("manifold.events.index.view_past_events_videos"), webpages_videos_all_path, class: "d-block d-lg-inline ps-4 faustina" %>
      </div>
    </div>
    <div class="row event-filters">
      <a name="list"></a>
      <div class="col-12 col-lg-6 mt-4 text-center">
        <%= render "form" %>
      </div>

      <div class="col-12 col-lg-6 text-center mt-4 ps-md-0">
        <%= render "calendar" %>
      </div>
      <div class="col-12">
        <span class="event-filter-link d-block mt-4 mb-2 roboto-light">
          <%= filters_link(@type) %>
        </span>
      </div>
    </div>
  </div>

  <div class="container-lg">
    <div class="row mt-3 mb-3">
      <div class="col-12 events pt-3 mb-3 ps-0" id="search-events">
        <div class="row">
          <div class="col ps-4">
            <a name="list" id="list"></a>
            <% if @type.present? && action_name.exclude?("search") %>
            <h2 class="mb-4 workshops-label d-inline-block w-100">
              <%= set_header(@type, params[:type]) %> <%= close_button(action_name) %>
            </h2>
            <% end %>
          </div>
        </div>

        <%= turbo_frame_tag "events" do %>

          <% if action_name.include? "search" %>
            <h2 class="mb-4 workshops-label d-inline-block w-100">
              Searched for: "<%= params[:search] %>" <%= close_button(action_name) %>
            </h2>
          <% end %>
        
          <%= render "events" %>

        <% end %>

      </div>
    </div>
  </div>
</div>
