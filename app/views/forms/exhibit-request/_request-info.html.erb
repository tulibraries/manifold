<%= f.input :exhibit_title,
            label: t("manifold.forms.exhibit_request.exhibit_title"), 
            required: :true %>
<%= f.input :exhibit_date_range,
            label: t("manifold.forms.exhibit_request.date_range"), 
            required: :true %>
<%= f.input :description, as: :text,
            hint: t("manifold.forms.exhibit_request.description_hint_html"), 
            label: t("manifold.forms.exhibit_request.description"),
            required: :true %>
<%= f.input :exhibit_location, as: :check_boxes, 
            collection: t("manifold.forms.exhibit_request.location_options").map{ |k,v| v }, 
            label: t("manifold.forms.exhibit_request.location"), 
            required: false %>
<%= f.input :exhibit_display_methods, as: :check_boxes, 
            collection: t("manifold.forms.exhibit_request.display_method_options").map{ |k,v| v }, 
            label: t("manifold.forms.exhibit_request.display_method"), 
            required: false %>
<%= f.input :exhibit_funding_source, as: :text, 
            label: t("manifold.forms.exhibit_request.funding_source"), 
            required: :true %>
<%= f.input :exhibit_insurance, as: :text, 
            label: t("manifold.forms.exhibit_request.insurance"), 
            required: :true %>
<%= f.input :exhibit_temple_connection, as: :boolean, 
            collection: t("manifold.forms.fields.boolean.yes_no").map{ |k,v| v },
            label: t("manifold.forms.exhibit_request.temple_connection"), 
            required: false %>
<%= f.input :exhibit_temple_connection_description, as: :text,
            label: t("manifold.forms.exhibit_request.temple_connection_description") %>
<%= f.input :exhibit_policies_acknowledgement, as: :boolean, 
            collection: t("manifold.forms.fields.boolean.yes_no").map{ |k,v| v },
            label: t("manifold.forms.exhibit_request.acknowledgement_html"), 
            required: true %>