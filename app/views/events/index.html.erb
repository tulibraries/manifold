<%= render "mobile_menu" %>

<div class="container event-index">
  <div class="container">
  <div class="row">
  <div class="col-12">
  <h1 class="d-none d-lg-block"><%= title t("manifold.events.index.page_title") %></h1>
  </div>
  </div>
  <div class="row">
    <div class="col-12">
      <% unless @intro.nil? %>
        <div class="intro"><%= @intro.description %></div>
      <% end %>
    </div>
  </div>
</div>

<div class="container" id="featured-events">
  <div class="col-12 py-4">
    <h2 class="bl-red" style="font-size: 175%"><%= t("manifold.events.index.featured_events") %></h2>
  </div>
  <div class="row mb-3 px-3 justify-content-evenly d-flex">
    <%= render "featured" if @featured_events.present? %>
  </div>
  <div class="col-12 text-center filter_links mb-3">
    <%= link_to t("manifold.events.index.view_past_events"), past_events_path, class: "d-block d-lg-inline pr-4 faustina" %>
    <hr />
    <%= link_to t("manifold.events.index.view_past_events_videos"), webpages_videos_all_path, class: "d-block d-lg-inline pl-4 faustina" %>
  </div>
</div>

<div class="container mt-4">
  <div class="row event-filters">
    <a name="list"></a>
    <div class="col-12 col-lg-6 text-center">
      <%= form_tag(person_search_path, method: "POST", class: "d-inline-block mr-3 mt-0 w-100 text-left", id: "people-search") do %>
			<%= label_tag(:search, "search events by name", :class=>"element-invisible") %>
      <i class="fa fa-search"></i>
			<%= text_field_tag(:search, nil, class: "form-control w-100 d-inline-block", 
								placeholder: "search events by name",
								results: "0"
								) %>
		<% end %>
    </div>

    <div class="col-12 col-lg-6 text-center mt-4 pl-md-0">
      <div class="dropdown align-bottom">
        <button class="btn btn-secondary dropdown-toggle pl-0 w-100 pl-3 text-left" type="button"
        id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= t("manifold.events.index.calendar") %>
        </button>
        <div class="dropdown-menu pl-2 w-100 pb-3" aria-labelledby="dropdownMenuButton">
          <%= render "dates" %>
        </div>
      </div>
    </div>
    <div class="col-12">
      <%= link_to "Limit to workshops", events_path(page: 1, type: "Workshop"), class: "workshops-link d-block mt-4 roboto-light" %>
    </div>
  </div>

  <div class="row mt-3 mb-3 sub-level-background">
    <div class="col-12 <%= @exhibitions.blank? ? "col-lg-12" : "col-lg-8" %> events pt-3 mb-3" id="events">
      <div class="row">
        <div class="col-12">  
          <h2 class="p-3 mb-3 current-events" id="upcoming-events">
            <span><%= t("manifold.events.index.upcoming_events") %></span>
          </h2>
        </div>
      </div>
    <% if params[:type].present? && params[:type] != "none" %>
      <h2 class="ml-4 mb-4"><%= params[:type] + " " + t("manifold.events.index.events") %></h2>
    <% end %>
    <% if params[:date].present? %>
      <h2 class="ml-4 mb-4">
        <%= t("manifold.events.index.events_on") + " " + Date.parse(params[:date]).strftime("%m-%d-%Y") if params[:date].present? %>
      </h2>
    <% end %>

      <%= render "events" %>

    </div>

    <% unless @exhibitions.blank? %>
    <div class="col-12 col-lg-4 exhibits">
      <div class="row">
        <div class="col-12 pt-3 mb-3" id="events-exhibits">

            <h2 class="p-3 mb-3 current-exhibits">
              <span><%= t("manifold.events.index.current_exhibits_label") %></span>
            </h2>
      
            <%= render "exhibitions" %>
        </div>
      </div>
    </div>
  <% end %>
    
    </div>
  </div>
  </div>
</div>
