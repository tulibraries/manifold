<%= t("manifold.forms.recall_book.request_disclaimer_html") %>
<%= f.input :author, label: t("manifold.forms.fields.author"), required: true %>
<%= f.input :recall_title, label: t("manifold.forms.fields.title"), required: true %>
<%= f.input :call_number, label: t("manifold.forms.fields.call_number"), required: true %>
<%= f.input :substitute_edition, as: :radio_buttons, 
                        label: t("manifold.forms.fields.subsitute_edition"), 
                        collection: t("manifold.forms.fields.boolean.yes_no").map{ |k,v| v }, 
                        required: :true %>
<%= f.input :pickup_location, as: :radio_buttons, 
                            label: t("manifold.forms.fields.pickup_location"), 
                            collection: t("manifold.forms.fields.location").map{ |k,v| v }, 
                            required: :true %>
<%= f.input :cancellation_date, as: :date, html5: true, 
                        start_year: Date.today.year, end_year: Date.today.year+1, order: [:month, :day, :year], 
                        label: t("manifold.forms.fields.cancellation_date"), 
                        required: true %>
<%= f.input :comments, as: :text, label: t("manifolds.forms.fields.comments") %>
