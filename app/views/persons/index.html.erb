<%= render "mobile-menu" %>

<div class="container staff-index">

  <h1><%= title "Staff Directory" %></h1>

  <div class="filters row py-4 px-0 mb-4" style="background-color:#eee;">
  <%= form_with url: people_path, method: "GET", id: "people-search", class: "w-100" do |f| %>
    <div class="col-12 d-inline-block">
    <i class="fa fa-search" style="position:relative;left:28px;z-index:3"></i>
    <input class="" type="text" name="q" id="staffSearch" 
            placeholder="search staff directory by name or title" autocomplete="off" />
    <%= f.select :department, @departments.collect { |p| [ p.name, p.slug ]}, 
                              { include_blank: "filter by department",
                                class: "d-inline-block float-left" } %>
    <%= f.select :subject, @subjects.collect { |p| [ p, p ]}, 
                             include_blank: "filter by specialty",
                              selected: "selected",
                              style: "width: 100%;margin:auto",
                              class: "d-inline-block float-left"  %>
    </div>
  <% end %>
  </div>
  <div class="row">
    <div class="col-9">
      <div class="d-block d-lg-none filters">
        <% unless filter_tags.empty? %>
          <% filter_tags.each do |tag| %>
            <span class="filter-tag"><%= tag.html_safe %></span>
          <% end %>
          <% unless filter_tags.size < 2 %>
            <%= link_to "Reset Filters", people_path, class: "reset-filters" %>
          <% end %>
        <% end %>
      </div>
      <%= render "persons_list" %>
    </div>

    <div class="col-12 col-lg-3 right-side">
      <div class="entity-help"><%= t("manifold.people.entity_help_html") %></div>
      <% unless @fcn_link.nil? %>
        <div class="access-link"><h3><%= link_to t("manifold.people.fcn_link"), @fcn_link %></h3></div>
      <% end %>
    </div>

  </div>

</div>
