<%= render "mobile-menu-secondary" %>

<div class="container" style="margin-top: 35px;">
	<div class="row page">

		<% if @webpage.categories.present? %>

			<div class="d-none d-md-block col-3">
				<%= render "categories_list" %>
			</div>
      <% if @webpage.external_link.present? || @webpage.file_uploads.present? %>
        <div class="col-12 col-md-6">
      <% else %>
        <div class="col-12 col-md-9">
      <% end %>

    <% else %> <!-- no category list -->
    
      <% if @webpage.external_link.present? || @webpage.file_uploads.present? %>
        <div class="col-12 col-md-9">
      <% else %>
        <div class="col-12">
      <% end %>
			
		<% end %>

    <%= render "covid_alert" if @covid_alert.present? %>

		<h1><%= title @webpage.title %></h1>
    <div class="text-left page-description">
      <%= render @webpage.layout.parameterize %>
    </div>
  </div>

  <% unless @webpage.layout == "Virtual Tour" %>
    <div class="col-12 col-md-3">

      <% if @webpage.external_link.present? %>
        <div class="access-link">
          <h2><%= link_to @webpage.external_link.title, @webpage.external_link.link %></h2>
        </div>
      <% end %>

      <%= render "attachments" %>
      
	  </div>
  <% end %>

  </div>
</div>

<script type="application/ld+json">
  <%= json_ld(@webpage) %>
</script> 
