<div class="container" id="videos-index" style="margin-top: 14px;">

<div class="row backlink">
	<div class="col">
		<%= link_to t("manifold.webpages.videos.breadcrumb"), webpages_videos_all_path %> 
	</div>
</div>


<div class="row">
	<div class="col">
		<h1 class="page-title"><%= title t("manifold.webpages.videos.page_title") %></h1>
		<div class="row">
			<div class="col-lg-10 offset-lg-1">
					<iframe src="https://temple.hosted.panopto.com/Panopto/Pages/Embed.aspx?pid=614517f5-5710-4b2a-8e11-af18012c7aa1&autoplay=false&offerviewer=true&showtitle=true&showbrand=true&captions=false&interactivity=all" height="640px" width="100%" style="border: 1px solid #464646;" allowfullscreen allow="autoplay"></iframe>
				</div>
			</div>
		</div>
</div>
</div>

<div class="row">
	<div class="col-lg-10 offset-lg-1 text-center">
		<div id="featuredTitle" class="text-center"><%= @featured_video_title %></div>
	</div>
</div>

<% unless @featured_video_description.nil? %>
<div class="row">
	<div class="col">
		<hr >
		<%= sanitize @featured_video_description.html_safe %>
	</div>
</div>
<% end %>

</div>
