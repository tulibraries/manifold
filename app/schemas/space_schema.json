{
	"definitions": {},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "object",
	"title": "The Root Schema",
	"required": [
		"data"
	],
	"properties": {
		"data": {
			"$id": "#/properties/data",
			"type": "object",
			"title": "The Data Schema",
			"required": [
				"id",
				"type",
				"attributes"
			],
			"properties": {
				"id": {
					"$id": "#/properties/data/properties/id",
					"type": "string",
					"title": "The Id Schema",
					"default": "0",
					"examples": [
						"2"
					],
					"pattern": "^([0-9]*)$"
				},
				"type": {
					"$id": "#/properties/data/properties/type",
					"type": "string",
					"title": "The Type Schema",
					"default": "space",
					"examples": [
						"building",
						"event"
					],
					"pattern": "^(.*)$"
				},
				"attributes": {
					"$id": "#/properties/data/properties/attributes",
					"type": "object",
					"title": "The Attributes Schema",
					"required": [
						"name",
						"label"
					],
					"properties": {
						"name": {
							"$id": "#/properties/data/properties/attributes/properties/name",
							"type": "string",
							"title": "The Name Schema",
							"default": "",
							"examples": [
								"The Lobby"
							],
							"pattern": "^(.*)$"
						},
						"label": {
							"$id": "#/properties/data/properties/attributes/properties/label",
							"type": "string",
							"title": "The Label Schema",
							"default": "",
							"examples": [
								"The Lobby"
							],
							"pattern": "^(.*)$"
						},
						"phone_number": {
							"$id": "#/properties/data/properties/attributes/properties/phone_number",
							"type": "string",
							"title": "The Telephone Number Schema",
							"default": "",
							"examples": [
								"2155551212"
							]
						},
						"email": {
							"$id": "#/properties/data/properties/attributes/properties/email",
							"type": "string",
              "format": "email",
							"title": "The Email Schema",
							"examples": [
								"zaphod@example.com"
							]
						},
						"updated_at": {
							"$id": "#/properties/data/properties/attributes/properties/updated_at",
							"type": "string",
							"title": "The time the space record was updated",
 							"format": "date-time",
							"default": "",
							"examples": [
								"2018-01-01T12:00:00"
							]
						}
					}
				},
				"links": {
					"$id": "#/properties/data/properties/links",
					"type": "object",
					"title": "The Links Schema",
					"required": [
						"self"
					],
					"properties": {
						"self": {
							"$id": "#/properties/data/properties/links/properties/self",
							"type": "string",
							"title": "The Self Schema",
							"default": "",
							"examples": [
								"http://test.host/space/2"
							],
							"pattern": "^(.*)$"
						}
					}
				}
			}
		}
	}
}
