<%= form_tag((action_name.include? "past") ? past_events_search_path : events_search_path, method: "get", value: @query,
              class: "d-inline-block mr-3 mt-0 w-100 text-start", id: "event-search") do %>
        <%= label_tag(:search, "search events by name", :class=>"element-invisible") %>
        <%= text_field_tag(:search, nil, class: "form-control w-100 d-inline-block search-icon", 
                  placeholder: (action_name.include? "past") ? "search past events by name" : "search events by name",
                  results: "0"
                  ) %>
        <% end %>
