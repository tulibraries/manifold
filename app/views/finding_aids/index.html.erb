<%= render "mobile_menu" %>

<div class="container-lg aid-index">

  <h1 class="d-none d-lg-block"><%= title t("manifold.finding_aids.index.page_title") %></h1>

  <div class="row">
    <div class="col-3 pe-5 leftside-index ps-3 ps-lg-2 d-none d-md-none d-lg-block">
      <div class="panel-group" id="accordion">
			  <div class="filter_collections">
			    <%= render "collections" %>
			  </div>
			  <div class="filter_subjects">
			    <%= render "subjects" %>
			  </div>
			  <div class="filter_reset">
			    <%= render "reset" %>
			  </div>
			</div>
    </div>

    <div class="col-12 col-lg-7 px-4">
      <%= render "aid_list" %>
    </div>

    <div class="col-12 col-lg-2 ps-3">
      <h2 class=""><%= link_to t("manifold.finding_aids.index.search_link"), "/finding_aids/search", class: "catalog-link p-2 m-4 m-lg-0" %></h2>
    </div>
  </div>

</div>
