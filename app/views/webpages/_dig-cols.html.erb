<% @digcols.each do |item| %>
  <div class="col-12 col-md-6 col-lg-4 library-event">
    <%= link_to item.link do %>
    <% if item.image.attached? %>
      <%= image_tag item.custom_image(330, 235), class: "d-block decorative", alt: "",
                    loading: "lazy" %>
    <% end %>
      <span class="mt-3 d-block event-title">
        <h2><%= item.label.truncate(52) %></h2>
      </span>
    <% end %>
      <p><%= strip_tags(item.blurb.truncate(120).html_safe) %></p>
  </div>
<% end if @digcols.present? %>

<div class="col-12 text-end px-0">
  <%= link_to "Browse our Digital Collections", t("manifold.webpages.home.digital_collections_link"), class: "view-all-blogs" %>
</div>