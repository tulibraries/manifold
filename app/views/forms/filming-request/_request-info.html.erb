<%= f.input :location_of_filming, as: :text, 
            label: t("manifold.forms.filming_request.location_of_filming"), 
            required: :true %>
<%= f.input :date_of_filming, as: :date, start_year: Date.today.year, end_year: Date.today.year+1, 
            order: [:month, :day, :year], html5: true, 
            label: t("manifold.forms.filming_request.date_of_filming"), 
            required: :true %>
<%= f.input :time_of_filming, as: :time, html5: true, 
            label: t("manifold.forms.time_of_filming"), required: :true %>
<%= f.input :duration_of_filming, 
            label: t("manifold.forms.filming_request.duration_of_filming_label"), 
            hint: t("manifold.forms.filming_request.duration_of_filming_hint"), 
            required: :true %>
<%= f.input :description, as: :text, label: t("manifold.forms.filming_request.description"), required: :true %>
<%= f.input :temple_course_project, as: :radio_buttons, required: :true, 
            label: t("manifold.forms.filming_request.temple_course_project") %>
<%= f.input :total_number_of_production_members, as: :text, 
            label: t("manifold.forms.filming_request.number_of_members"), required: :true,
            hint: t("manifold.forms.filming_request.number_of_members.hint") %>
<%= f.input :mobile_telephone_number_of_the_key_crew_member, as: :text, 
            label: t("manifold.forms.filming_request.mobile_of_key_member"), required: :true %>
<%= f.input :additional_crew_name, required: :true, 
            label: t("manifold.forms.filming_request.additional_crew_name") %>
<%= f.input :additional_email, as: :email, required: true, 
            label: t("manifold.forms.filming_request.additional_email") %>