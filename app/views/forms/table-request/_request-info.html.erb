<%= f.input :comments, as: :text, label: t("manifold.forms.table_request.comments"), required: :true %>
<%= f.input :preferred_date, as: :date, html5: true, required: :true, 
                    start_year: Date.today.year, end_year: Date.today.year+1, 
                    order: [:month, :day, :year], 
                    label: t("manifold.forms.table_request.preferred_date") %>
<%= f.input :preferred_time, as: :time, html5: true, 
                    label: t("manifold.forms.table_request.preferred_time"), 
                    required: :true %>
<%= f.input :easel, as: :radio_buttons, required: :true, label: t("manifold.forms.table_request.easel") %>